{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: install",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "problemMatcher": []
    },
    {
      "label": "npm: dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*(VITE|vite)\\s+v",
          "endsPattern": "Local:\\s+http://localhost:\\d+/"
        }
      },
      "group": "build"
    },
    {
      "label": "npm: build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "npm: preview",
      "type": "shell",
      "command": "npm",
      "args": ["run", "preview"],
      "problemMatcher": []
    },
    {
      "label": "npm: typecheck",
      "type": "shell",
      "command": "npm",
      "args": ["run", "typecheck"],
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "npm: test",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "npm: test:watch",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:watch"],
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "functions: install",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "problemMatcher": []
    },
    {
      "label": "functions: build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "functions: typecheck",
      "type": "shell",
      "command": "npm",
      "args": ["run", "typecheck"],
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "problemMatcher": ["$tsc"]
    }
  ]
}
